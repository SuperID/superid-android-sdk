<?xml version="1.0" encoding="utf-8" ?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
<!-- 没有焦点时的背景颜色 -->  
<item android:state_window_focused="false"  
android:drawable="@color/s_color_background_cell" />  
<!-- 非触摸模式下获得焦点并单击时的背景颜色 -->  
<item android:state_focused="true" android:state_pressed="true"  
android:drawable="@color/s_color_border" />  
<!--触摸模式下单击时的背景颜色  -->  
<item android:state_focused="false" android:state_pressed="true"  
android:drawable="@color/s_color_border" />  
<!--选中时的背景颜色  -->  
<item android:state_selected="true"  android:drawable="@color/s_color_border" />  
<!--获得焦点时的背景  颜色-->  
<item android:state_focused="true" android:drawable="@color/s_color_border" />  
</selector> 