<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guidefakeid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/s_color_custombg">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="86dp"
            android:text="@string/superid_tips_fakeid"
            android:textColor="@color/s_color_customfont"
            android:textSize="@dimen/s_size_font_title"/>

        <LinearLayout
            android:id="@+id/ll_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/superid_ico_fakeid_guideview_tips1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/superid_ico_fakeid_guideview_tips2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/superid_ico_fakeid_guideview_tips3"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_icotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_ico"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/superid_tips_bright"
                android:textColor="@color/s_color_customfont"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/superid_tips_focusing"
                android:textColor="@color/s_color_customfont"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/superid_tips_steady"
                android:textColor="@color/s_color_customfont"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_agree"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/ll_icotext"
            android:gravity="center">

            <ImageView
                android:id="@+id/ico_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/superid_ico_fakeid_guideview_agree"/>

            <Button
                android:id="@+id/btn_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ico_agree"
                android:background="@null"
                android:onClick="btnAgree"
                android:paddingLeft="12dp"
                android:text="@string/superid_action_agreeitem"
                android:textColor="@color/s_color_customfont"
                android:textSize="@dimen/s_size_font_tips"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_gfakeidstart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_agree"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/superid_text_selector"
            android:gravity="center"
            android:onClick="btnGuideFakeid"
            android:text="@string/superid_action_startscan"
            android:textColor="@color/s_color_custombg"
            android:textSize="@dimen/s_size_font_bar"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/rl_top"
        android:background="@android:color/transparent"/>

</RelativeLayout>