<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_guiderebundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/s_color_custombg"/>

    <RelativeLayout
        android:id="@+id/rl_grbtop"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@id/top_view"
        android:background="@color/s_color_custombg">

        <ImageView
            android:id="@+id/guide_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/superid_guideview_record_img"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/guide_pic">

            <TextView
                android:id="@+id/grb_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text=""
                android:textColor="@color/s_color_customfont"
                android:textSize="@dimen/s_size_font_title"/>

            <TextView
                android:id="@+id/grb_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grb_tv1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="3dp"
                android:text="@string/superid_tips_guideregisterbundle"
                android:textColor="@color/s_color_customfont"
                android:textSize="@dimen/s_size_font_text"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_grbtop"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_grbexit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/superid_text_selector"
            android:gravity="center"
            android:onClick="btnGrbExit"
            android:text="@string/superid_action_exit"
            android:textColor="@color/s_color_custombg"
            android:textSize="@dimen/s_size_font_bar"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/s_color_border"/>

        <Button
            android:id="@+id/btn_grbrebundld"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/superid_text_selector"
            android:gravity="center"
            android:onClick="btnGrbRebundle"
            android:text="@string/superid_action_rebundleface"
            android:textColor="@color/s_color_custombg"
            android:textSize="@dimen/s_size_font_bar"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btn_layout"
        android:background="@android:color/transparent"/>

</RelativeLayout>